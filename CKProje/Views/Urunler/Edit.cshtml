@model CKModel.Models.Urunler

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="align-content-md-end">
        <h1>Ürün Düzenle</h1>

        
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UrunID" />
                    <div class="form-group">
                        <label asp-for="UrunAdi" class="control-label"></label>
                        <input asp-for="UrunAdi" class="form-control" />
                        <span asp-validation-for="UrunAdi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Fiyat" class="control-label"></label>
                        <input asp-for="Fiyat" class="form-control" />
                        <span asp-validation-for="Fiyat" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Kaydet" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-dark">Geri Dön</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }



    </div>
    </div>

        